{
  "name": "edge-utils",
  "version": "1.0.0",
  "description": "Platform-agnostic utilities for edge computing and serverless environments",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./cache": {
      "import": "./dist/cache.esm.js",
      "require": "./dist/cache.js"
    }
  },
  "keywords": ["edge", "serverless", "cloudflare", "vercel", "deno", "lambda", "edge-computing"],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "rollup -c",
    "test": "jest"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.0.0",
    "jest": "^29.0.0",
    "rollup": "^2.0.0",
    "rollup-plugin-terser": "^7.0.0"
  }
}