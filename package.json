{
  "name": "edge-utils",
  "version": "1.0.0",
  "description": "Platform-agnostic utilities for edge computing and serverless environments",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./cache": {
      "import": "./dist/cache.esm.js",
      "require": "./dist/cache.js"
    }
  },
  "keywords": ["edge", "serverless", "cloudflare", "vercel", "deno", "lambda", "edge-computing"],
  "engines": {
    "node": ">=16"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ZFlareUI/Edge-Utils.git"
  },
  "bugs": {
    "url": "https://github.com/ZFlareUI/Edge-Utils/issues"
  },
  "homepage": "https://github.com/ZFlareUI/Edge-Utils#readme",
  "scripts": {
    "build": "rollup -c",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "echo 'No linter configured'",
    "prepublishOnly": "npm run build && npm test"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.0.0",
    "jest": "^29.0.0",
    "rollup": "^2.0.0",
    "rollup-plugin-terser": "^7.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}